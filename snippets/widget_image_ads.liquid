<div class="sidebarBlock">
    <div class="sidebarBlock-content br-bt">
        <div class="advertisement-image">
            {% if block.settings.link != blank %}
            <a class="img image-top " href="{{ block.settings.link }}" aria-label="link">
            {% else %}
                <div class="img image-top">
            {% endif %}
                {% if block.settings.image != blank %}
                    {{ block.settings.image | img_url: '300x' | img_tag: block.settings.image.alt, 'image-text-overlay' }}
                {% else %}
                    <div class="no-image" style="padding-top: 53%">
                        <span>image</span>
                    </div>
                {% endif %}
            {% if block.settings.link != blank %}
                </a>
            {% else %}
                </div>
            {% endif %}
            {% if block.settings.link != blank %}
            <a class="img image-bottom" href="{{ block.settings.link_2 }}" aria-label="link">
            {% else %}
                <div class="img image-bottom">
            {% endif %}
                {% if block.settings.image_2 != blank %}
                    {{ block.settings.image_2 | img_url: '300x' | img_tag: block.settings.image_2.alt, 'image-text-overlay' }}
                {% else %}
                    <div class="no-image" style="padding-top: 53%">
                        <span>image</span>
                    </div>
                {% endif %}
            {% if block.settings.link_2 != blank %}
                </a>
            {% else %}
                </div>
            {% endif %}
        </div>
    </div>
</div>